extends layout

block content
  h1= title
  p Rows Count = #{query.rows} and  Columns Count =  #{query.cols}
  - var rows = Number(query.rows) 
  - var cols = Number(query.cols)
  - if(!Number.isInteger(rows)) {
      p Row value given is in not integer
  - }
  - else if(!Number.isInteger(Number(cols))) {
      p Column value given in not integer
  - }
  - else if (!(rows >= 1 && rows <= 10)) {
      p  Rows range given is from 1 to 10
  - }
  - else if (!(cols >= 1 && cols <= 10)) {
      p  Column range given is from 1 to 10
  - }
  - else {
        table#outer
            - for(let i = 0; i < rows; i++) {
                tr#middle 
                    - for(let j = 0; j < cols; j++) {
                        td= (1 + i + j * rows)
                    - }
            - }
  - }
  